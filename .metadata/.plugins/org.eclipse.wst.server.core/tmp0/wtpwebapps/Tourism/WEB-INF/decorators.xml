<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/api*</pattern>
    </excludes>
    
    <!-- apply Sitemesh default template -->
    <decorator name="admin" page="admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>
    
    <decorator name="web" page="web.jsp">
        <pattern>/*</pattern>
    </decorator>
      
     <decorator name="login" page="login.jsp">
        <pattern>/dang-nhap</pattern>
    </decorator>
    <decorator name="register" page="register.jsp">
        <pattern>/dang-ky</pattern>
    </decorator>
    <decorator name="hotel" page="hotel.jsp">
        <pattern>/khach-san</pattern>
    </decorator>
    
    <decorator name="place" page="place.jsp">
        <pattern>/dia-diem</pattern>
    </decorator>
     <decorator name="rent" page="rent.jsp">
        <pattern>/thue-muon</pattern>
    </decorator>
</decorators>